@model OfficeMapper.Models.ChangePhoneModel

@{
    Layout = null;
    ViewBag.Title = "OfficeMapper";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apps</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="http://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>
</head>
<body>
    <div id="modalDialogBack" style="display:block">
        <div id="modalDialog">
            @using (Html.BeginForm("ChangePhone", "Home", FormMethod.Post))
            {
                <div id="viewData">
                    <div style="color:#fff; font-size:x-large;">Прив'язати користувача до телефону</div>
                    <div>@Model.CurrentUser</div>
                    <div class="phoneNumber" id="editPanel">
                        <div>Введіть номер у форматі (750)00-00</div>
                        @Html.TextBoxFor(m => m.Phone, new { pattern = @"\(7[0-9]{2}\)[0-9]{2}-[0-9]{2}", @class = "phoneNumber", @type = "tel", @id = "inputPhone" })
                        <br/>
                        <br />
                        <div>
                            <input type="submit" class="btn btn-success" id="savePhone" value="Зберегти" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    </body>
</html>